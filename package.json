{
  "name": "mild-theme",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "run-s dev:setup && run-p **:develop",
    "build": "run-s webpack:build hugo:build purgecss",
    "publish": "run-s build publish-purgecss",
    "dev:setup": "node ./.config/setup-hugo-dev.js exampleSite/config.yaml exampleSite/config.dev.yaml",
    "hugo:develop": "cd exampleSite && hugo server --config config.dev.yaml --themesDir ../..",
    "hugo:build": "cd exampleSite && hugo --minify --themesDir ../..",
    "webpack:develop": "webpack --config .config/webpack.dev.js",
    "webpack:build": "webpack --config .config/webpack.prod.js",
    "purgecss:build": "run-s purgecss publish-purgecss",
    "purgecss": "purgecss --config .config/purgecss.config.js  --output exampleSite/public/assets/styles",
    "publish-purgecss": "copyfiles -V -f exampleSite/public/assets/styles/*.css ./static/assets/styles"
  },
  "author": "Thada",
  "license": "MIT",
  "dependencies": {
    "jquery": "^3.6.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@types/jquery": "^3.5.14",
    "@types/lodash": "^4.14.181",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "mini-css-extract-plugin": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-loader": "^6.2.1",
    "postcss-preset-env": "^7.4.3",
    "purgecss": "^4.1.3",
    "sass": "^1.50.0",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^5.8.0",
    "webpack-remove-empty-scripts": "^0.8.0",
    "yaml": "^2.0.1"
  }
}
